{
	"xsappname": "spring-security-xsuaa-usage",
	"tenant-mode": "dedicated",
	"scopes"        : [
    {
      "name"        : "$XSAPPNAME.Read",
      "description" : "Read Permissions."
    },
    {
      "name"        : "$XSAPPNAME.Write",
      "description" : "Write permissions."
    }
  ],
  "role-templates": [
    {
      "name"             : "Viewer",
      "description"      : "View Data",
      "scope-references" : [
        "$XSAPPNAME.Read"
      ]
    },
    {
      "name"                 : "Modifier",
      "description"          : "Modify Data",
      "scope-references"     : [
        "$XSAPPNAME.Read",
        "$XSAPPNAME.Write"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "Viewer",
      "description": "Viewer (read)",
      "role-template-references": [
        "$XSAPPNAME.Viewer"
      ]
    },
    {
      "name": "Modifier",
      "description": "Modifier (read, write)",
      "role-template-references": [
        "$XSAPPNAME.Modifier"
      ]
    }
  ]
}  
